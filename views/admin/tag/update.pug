extends layout

block content
    section.content-header
      .container-fluid
        .row.mb-1.ml-5
          h1 Tag
    .card.card-primary.m-5
      .card-header
        h3.card-title Edit tag
      form(action="/admin/tag/update/" + data[0].tagId + "" method="POST")
        .card-body
          .form-group
            label(for='name') Tag's name
            input#name.form-control(type='text', value="" + data[0].tagName + "", name='name')
        .card-footer
          button.btn.btn-primary(type='submit') Submit