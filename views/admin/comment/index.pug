extends layout

block content 
    section.content-header.ml-5
        .container-fluid
            .row.mb-1.ml-5
            h1 Comment
    .card.m-5
      .card-header
        h3.card-title Comment List
      .card-body
        table.table.table-bordered
          thead
            tr
              th(style=' width:320px') User'email
              th Post's name
              th(style=' width:150px') Status
              th(style=' width:550px') Content
              th(style=' width:150px') Created Date
          tbody
            each item in data
              tr
                td=item.userEmail
                td=item.postName
                td=item.statusName
                td=item.commentContent
                td=item.createdDate.toString().slice(4,15)
            